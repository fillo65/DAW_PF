<% layout('../templates/principal') -%>
<div class="container">
  <h4>Servicios</h4><span><a href="/config/servicios/new">Crear Nuevo</a></span>
  <div class="col-xs-12">
    <table id="basic-table">
      <thead>
      <tr>
        <th> Nombre </th>
        <th> Precio </th>
        <th> Tipo </th>
        <th> Prefijo VC </th>
        <th> Fecha de Modificaci√≥n</th>
        <th> Opciones </th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(reg){ %>
        <tr>
          <td><%= reg.name %></td>
          <td><%= reg.price %></td>
          <td><%= reg.type %></td>
          <td><%= reg.prefix %></td>
          <td><%= reg.created_at %></td>
          <td>
            <a href="/config/servicios/edit/<%= reg._id %>">Editar</a>
          </td>
          <td>
            <form method="POST" action='/config/servicios/edit/<%= reg._id %>' enctype='application/x-www-form-urlencoded' >
              <input type='hidden' value='DELETE' name='_method' />
              <button type="submit"> DELETE </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
      </table>
  </div>

</div>
