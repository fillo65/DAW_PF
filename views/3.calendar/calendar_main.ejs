<% layout('../templates/principal') -%>
<h4>Calendario</h4>
<div class="col-xs-12">
  <a href="/calendar/new">Crear Nuevo</a>
</div>
<div class="col-sm-12">
  <table id="basic-table">
    <thead>
      <tr>
        <th> Nombre </th>
        <th> Titulo </th>
        <th> Fecha </th>
        <th> Editar </th>
        <th> Borrar </th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(reg){ %>
        <tr>
          <td><%= reg.name %></td>
          <td>
            <ul>
              <% reg.editions.forEach(function(rex){ %>
                <li>
                  <%= rex.yearC %>-<%= rex.monthC %> <%= rex.Service %>
                </li>
                <% }) %>
              </ul>
            </td>
            <td><%= reg.updated_at %></td>
            <td>
              <a href="/calendar/edit/<%= reg._id %>">Editar</a>
            </td>
            <td>
              <form method="POST" action='/calendar/edit/<%= reg._id %>' enctype='application/x-www-form-urlencoded' >
                <input type='hidden' value='DELETE' name='_method' />
                <button type="submit"> DELETE </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
