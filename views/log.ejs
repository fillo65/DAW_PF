<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <title>get fast</title>

        <!-- Bootstrap -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/custom.css" rel="stylesheet">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <% include includes/header.ejs %>
        <main>
            <div class="container">
                <div class="col-xs-12 text-center">
                    <h3>Registro del proyecto</h3>
                </div>
                <div class="col-sm-3">
                    <ul>
                        <li><a href="/log/new">Nuevo</a></li>
                    </ul>
                </div>
                <div class="col-sm-9">
                    <table>
                        <tr>
                            <th> Fecha </th>
                            <th> Titulo </th>
                            <th> Comentarios </th>
                            <th> Editar </th>
                            <th> Borrar </th>
                        </tr>
                        <% logs.forEach(function(reg){ %>
                        <tr>
                            <td><%= reg.created_at %></td>
                            <td><%= reg.title %></td>
                            <td><%= reg.description %></td>
                            <td>
                                <a href="/log/edit/<%= reg._id %>">Editar</a>
                            </td>
                            <td>
                                <form method="POST" action='/log/edit/<%= reg._id %>' enctype='application/x-www-form-urlencoded' >
                                    <input type='hidden' value='DELETE' name='_method' />
                                    <button type="submit"> DELETE </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
        </main>
        <% include includes/footer.ejs %>
    </body>
</html>
